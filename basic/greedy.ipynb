   "source": [
    "# N이 1이 될 때까지\n",
    "n,k=map(int,input().split())\n",
    "result=0\n",
    "\n",
    "while True:\n",
    "    # n이 k로 나누어 떨어지는 수가 될때까지 빼기\n",
    "    target=(n//k)*k\n",
    "    result+=(n-target)\n",
    "    n=target\n",
    "    if n<k:\n",
    "        break\n",
    "    result+=1\n",
    "    n//=k\n",
    "\n",
    "result+=(n-1)\n",
    "print(result)"
   ]
